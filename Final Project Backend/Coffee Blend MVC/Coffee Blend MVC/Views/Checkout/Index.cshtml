@model BillingAddress
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    double Total = 0;
}

<section id="about">
    <div class="slider-item" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text justify-content-center align-items-center">

                <div class="col-md-7 col-sm-12 text-center desc">
                    <h1 class="mb-3 mt-5 bread">Check Out</h1>
                    <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home /</a></span> <span>Check Out</span></p>
                </div>

            </div>
        </div>
    </div>

</section>




<section class="CheckOut" id="checkOut">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 checkoutbody">
                <form  method="post" id="OrderForm" class="billing-form checkbodyItems ftco-bg-dark p-3 p-md-5">
                    <h3 class="mb-4 billing-heading">Billing Details</h3>
                    <div class="row align-items-end">
                        <div class="col-md-6">
                            <div class="form-group forms">
                                <label for="firstname">Firt Name</label>
                                <input type="text" asp-for="FirstName" class="form-control" placeholder="" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group forms">
                                <label for="lastname">Last Name</label>
                                <input type="text" asp-for="LastName" class="form-control" placeholder="" required>
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-12">
                            <div class="form-group forms">
                                <label for="country">State / Country</label>
                                <div class="select-wraps">
                                    <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                    <select name="" id="" class="form-control">
                                        <option value="">France</option>
                                        <option value="">Italy</option>
                                        <option value="">Philippines</option>
                                        <option value="">South Korea</option>
                                        <option value="">Hongkong</option>
                                        <option value="">Japan</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-6">
                            <div class="form-group forms">
                                <label for="streetaddress">Street Address</label>
                                <input type="text"  asp-for="StreetAddress"class="form-control" placeholder="House number and street name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" asp-for="StreetAdress2" class="form-control" placeholder="Appartment, suite, unit etc: (optional)">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-6">
                            <div class="form-group forms">
                                <label for="towncity">Town / City</label>
                                <input asp-for="Town" type="text" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group forms">
                                <label for="postcodezip">Postcode / ZIP *</label>
                                <input asp-for="ZipCode" type="text" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-6">
                            <div class="form-group forms">
                                <label for="phone">Phone</label>
                                <input asp-for="Phone" type="text" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group forms">
                                <label for="emailaddress">Email Address</label>
                                <input asp-for="Email" type="text" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-12">
                            <div class="form-group forms mt-4">
                                <div class="radio">
                                    <label class="mr-3"><input type="radio" name="optradio"> Create an Account? </label>
                                    <label><input type="radio" name="optradio"> Ship to different address</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form><!-- END -->



                <div class="row mt-5 pt-3 d-flex " id="flexible">
                    <div class="col-md-6 d-flex" id="checkfooterLeft">
                        <div class="cart-detail cart-total ftco-bg-dark p-3 p-md-4">
                            <h3 class="billing-heading mb-4">Cart Total</h3>
                           
                            <p class="d-flex flexp">
                                <span>Delivery</span>
                                <span>$0.00</span>
                            </p>
                            
                            <hr>
                            <p class="d-flex total-price">
                                <b id="total">Total</b>
                                @foreach (BasketItem item in ViewBag.BasktetProduct)
                                {
                                    Total += (item.Count * item.Price);

                                                   }
                                <span>$@Total</span>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6" id="checkfooterigth">
                        <div class="cart-detail ftco-bg-dark p-3 p-md-4">
                            <h3 class="billing-heading mb-4">Payment Method</h3>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="radios">
                                        <label><input type="radio" name="optradio" class="mr-2"> Direct Bank Tranfer</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="radios">
                                        <label><input type="radio" name="optradio" class="mr-2"> Check Payment</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="radios">
                                        <label><input type="radio" name="optradio" class="mr-2"> Paypal</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="checkboxs">
                                        <label>
                                            <input type="checkbox" value="" class="mr-2"> I have read and accept the terms and
                                            conditions
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" form="OrderForm" id="Subbut">Pleace an order</button>
                        </div>
                    </div>
                </div>
            </div> <!-- .col-md-8 -->




