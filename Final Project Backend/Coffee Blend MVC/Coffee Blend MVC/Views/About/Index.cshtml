<section class="ftco-section2">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 pr-md-5 discoverme">
                <div class="heading-section text-md-right ftco-animate">
                    @Html.Raw(Model.OurMenus.Head)
