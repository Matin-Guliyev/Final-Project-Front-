@model HomeVM
@{
    ViewData["Title"] = "Index";
}

<section class="home-slider owl-carousel">
    @foreach (var item in Model.HomeSliders)
    {
        <div class="slider-item" style="background-image: url(images/@item.Images);">
            <div class="overlay"></div>
            <div class="container">
                <div class="row slider-text justify-content-center align-items-center" data-scrollax-parent="true">

                    <div class="col-md-8 col-sm-12 text-center ftco-animate">
                        <span class="subheading"><i>@item.Text1</i></span>
                        <h1 class="mb-4">@item.Text2</h1>
                        <p class="mb-4 mb-md-5">
                           @item.Text3
                        </p>
                        <button class="order"> @item.Button1</button>
                        <button class="view">@item.Button2</button>
                    </div>

                </div>
            </div>
        </div>
    }


</section>

<section class="ftco-intro">
    <div class="container-wrap">
        <div class="wrap d-md-flex align-items-xl-end">
            <div class="info">
                <div class="row no-gutters">
                    <div class="col-md-4 d-flex ftco-animate">
                        <div class="icon"><span class="icon-phone"></span></div>
                        <div class="text">
                            <h3>000 (123) 456 7890</h3>
                            <p>A small river named Duden flows by their place and supplies.</p>
                        </div>
                    </div>
                    <div class="col-md-4 d-flex ftco-animate">
                        <div class="icon"><span class="icon-my_location"></span></div>
                        <div class="text">
                            <h3>198 West 21th Street</h3>
                            <p> 203 Fake St. Mountain View, San Francisco, California, USA</p>
                        </div>
                    </div>
                    <div class="col-md-4 d-flex ftco-animate">
                        <div class="icon"><span class="icon-clock-o"></span></div>
                        <div class="text">
                            <h3>Open Monday-Friday</h3>
                            <p>8:00am - 9:00pm</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="book p-4">
                <h3>Book a Table</h3>
                <form action="#" class="appointment-form">
                    <div class="d-md-flex">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="First Name">
                        </div>
                        <div class="form-group ml-md-4">
                            <input type="text" class="form-control" placeholder="Last Name">
                        </div>
                    </div>
                    <div class="d-md-flex">
                        <div class="form-group">
                            <div class="input-wrap">
                                <div class="icon"><span class="ion-md-calendar text-white"></span></div>
                                <input type="text" class="form-control appointment_date" placeholder="Date">
                            </div>
                        </div>
                        <div class="form-group ml-md-4">
                            <div class="input-wrap">
                                <div class="icon"><span class="ion-ios-clock text-white"></span></div>
                                <input type="text" class="form-control appointment_time" placeholder="Time">
                            </div>
                        </div>
                        <div class="form-group ml-md-4">
                            <input type="text" class="form-control" placeholder="Phone">
                        </div>
                    </div>
                    <div class="d-md-flex">
                        <div class="form-group">
                            <textarea name="" id="" cols="30" rows="2" class="form-control"
                                      placeholder="Message"></textarea>
                        </div>
                        <div class="form-group ml-md-4">
                            <input class="appoint" type="submit" value="Appointment"
                                   class="btn btn-white py-3 px-4">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<section class="ftco-about2 d-md-flex">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="MainImg">
                    <img src="~/images/@Model.MainImages.Image" alt="">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="one-half ftco-animate">
                    <div class="overlap2">
                        <div class="heading-section ftco-animate ">
                            <span class="subheading"><i>@Model.MainImages.Title</i></span>
                            <h2 class="mb-4">@Model.MainImages.Head</h2>
                        </div>
                        <div>
                            <p>
                               @Model.MainImages.Text
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<section class="ftco-section ftco-services">
    <div class="container">
        <div class="row">
            @foreach (FtcoServices ftcoServices in Model.FtcoServices)
            {
                <div class="col-lg-4 ftco-animate">
                    <div class="media d-block text-center block-6 services">
                        <div class="icon d-flex justify-content-center align-items-center mb-5">
                            @Html.Raw(ftcoServices.Span)
                        </div>
                        <div class="media-body">
                            <h3 class="heading">@ftcoServices.Head</h3>
                            <p>
                                @ftcoServices.Text
                            </p>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>

<section class="ftco-section2">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 pr-md-5 discoverme">
                <div class="heading-section text-md-right ftco-animate">
                    @Html.Raw(Model.OurMenus.Head)
                    <h2 class="mb-4">@Model.OurMenus.Title</h2>
                    <p class="mb-4">
                        @Model.OurMenus.Desc
                    </p>
                    <a href="#">
                        <button>
                            View Full Menu
                        </button>
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    @foreach (var item in Model.OurMenuImages)
                    {
                        <div class="col-md-6">
                            <div class="menu-entry">
                                <img src="~/images/@item.Images" alt="">
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-counter ftco-bg-dark img" id="section-counter" style="background-image: url(images/bg_2.jpg);"
         data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="row">
                    @foreach (var item in Model.Counters)
                    {
                        <div class="col-md-6 col-lg-3 d-flex justify-content-center counter-wrap ftco-animate">
                            <div class="block-18 text-center">
                                <div class="text">
                                    <div class="icon">@Html.Raw(item.Span)</div>
                                    <div class="counter">
                                        <strong class="number" data-number="@item.Count"></strong>
                                        <span>@item.Text</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>

<section class="BestSeller">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate text-center">
                <span class="subheading">@Html.Raw(Model.BestSellers.Head)</span>
                <h2 class="mb-4">@Model.BestSellers.Title</h2>
                <p>
                   @Model.BestSellers.Desc
                </p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.BestSellersImages)
            {
                <div class="col-md-3">
                    <div class="menu-entry">
                        <img src="~/images/@item.Images" alt="">
                        <div class="text text-center pt-4">
                            <h3><a href="~/#">@item.Head</a></h3>
                            <p>@item.Desc</p>
                            <p class="price"><span>$@item.Price</span></p>
                            <a style=" border: 1px solid; text-decoration: none; color: white; padding: 9px;" asp-controller="cart" asp-action="addtocart" asp-route-id="@item.Id">Add To Cart</a>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>

<section class="ftco-gallery2">
    <div class="container-wrap">
        <div class="row no-gutters">
            @foreach (var item in Model.FtcoGallery2s)
            {
                <div class="col-md-3 ftco-animate">
                    <div class="border">
                        <img src="~/images/@item.Images" alt="">
                        <div class="icon mb-4 d-flex align-items-center justify-content-center">
                            <span class="icon-search"></span>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

<section class="ftco-menu">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Discover</span>
                <h2 class="mb-4">Our Products</h2>
                <p>
                    Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there
                    live the blind texts.
                </p>
            </div>
        </div>
        <div class="row d-md-flex">
            <div class="col-lg-12 ftco-animate p-md-5">
