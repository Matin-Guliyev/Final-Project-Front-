
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@model LoginVM
<main>
    <section id="sign">

        <div class="container" id="container">
            <div class="form-container sign-up-container">
                <form class="form1" action="" method="post" >
                    <h1>Create Account</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="social-container">
                        <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                        <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                    <span class="input">or use your email for registration</span>
                    <input class="input" type="text" asp-for="Name" name="Name" placeholder="Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                    <input class="input" type="email" asp-for="Email"name="email" placeholder="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                    <input class="input" type="password" asp-for="Password" name="password" placeholder="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                    <button clas>Sign Up</button>
                </form>
            </div>
            <div class="form-container sign-in-container">
                <form class="form1" action="" method="post">
                    <h1>Sign in</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="social-container">
                        <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                        <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                    <span class="spans">or use your account</span>
                    <input class="input" type="email" asp-for="Email" placeholder="Email" />
                    <input class="input" type="password" asp-for="Password" placeholder="Password" />
                    <a href="#">Forgot your password?</a>
                    <button type="submit">Sign In</button>
                </form>
            </div>
            <div class="overlay-container">
                <div class="overlay">
                    <div class="overlay-panel overlay-left">
                        <h1>Welcome Back!</h1>
                  
                        <p>To keep connected with us please login with your personal info</p>
                        <button class="ghost" id="signIn">Sign In</button>
                    </div>
                    <div class="overlay-panel overlay-right">
                        <h1>Hello, Friend!</h1>
                        <p>Enter your personal details and start journey with us</p>
                        <button class="ghost" id="signUp">Sign Up</button>
                    </div>
                </div>
            </div>
        </div>


    </section>
</main>

