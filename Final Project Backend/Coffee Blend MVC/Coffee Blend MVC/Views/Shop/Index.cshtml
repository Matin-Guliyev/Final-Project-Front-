@model ShopVM
@{
    ViewData["Title"] = "Index";
}

<section id="about">
    <div class="slider-item" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text justify-content-center align-items-center">

                <div class="col-md-7 col-sm-12 text-center desc">
                    <h1 class="mb-3 mt-5 bread">Shop</h1>
                    <p class="breadcrumbs">
                        <span class="mr-2"><a href="~/index.html">Home /</a></span>
                        <span>Shop</span>
                    </p>
                </div>

            </div>
        </div>
    </div>

</section>








<section class="ftco-menu">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Discover</span>
                <h2 class="mb-4">Our Products</h2>
                <p>
                    Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there
                    live the blind texts.
                </p>
            </div>
        </div>
        <div class="row d-md-flex">
            <div class="col-lg-12 ftco-animate p-md-5">
                <div class="row">
                    <div class="col-md-12 nav-link-wrap mb-5">
                        <div class="nav ftco-animate nav-pills justify-content-center" id="v-pills-tab"
                             role="tablist" aria-orientation="vertical">
                            <a class="nav-link active" id="v-pills-1-tab" data-toggle="pill" href="~/#v-pills-1"
                               role="tab" aria-controls="v-pills-1" aria-selected="true">Main Dish</a>

                            <a class="nav-link" id="v-pills-2-tab" data-toggle="pill" href="~/#v-pills-2" role="tab"
                               aria-controls="v-pills-2" aria-selected="false">Drinks</a>

                            <a class="nav-link" id="v-pills-3-tab" data-toggle="pill" href="~/#v-pills-3" role="tab"
                               aria-controls="v-pills-3" aria-selected="false">Desserts</a>
                        </div>
                    </div>
                    <div class="col-md-12 d-flex align-items-center">

                        <div class="tab-content ftco-animate" id="v-pills-tabContent">

                            <div class="tab-pane fade show active" id="v-pills-1" role="tabpanel"
                                 aria-labelledby="v-pills-1-tab">
                                <div class="row">


                                    @await Html.PartialAsync("_FilterParttial", Model.MainDish)
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-2" role="tabpanel"
                                 aria-labelledby="v-pills-2-tab">
                                <div class="row">
                                    @await Html.PartialAsync("_FilterParttial", Model.Drinks)
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-3" role="tabpanel"
                                 aria-labelledby="v-pills-3-tab">
                                <div class="row">
                                    @await Html.PartialAsync("_FilterParttial", Model.Desserts)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>