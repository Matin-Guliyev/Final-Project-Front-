
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutAdmin.cshtml";
}

@model List<HomeSlider>


<a asp-controller="HomeSlider" asp-action="CreateSlider" class="btn btn-success">Create</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th> Slider Id</th>
            <th> Slider photo </th>
            <th> Header </th>
            <th> Text </th>
            <th> Button </th>
            <th> Delete </th>
            <th> Edit </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var slider in Model)
        {
<tr>
    <td> @slider.Id </td>
    <td> <img style="width:140px; height:140px; border-radius:50%;max-width:100%;" src="~/images/@slider.Images" /> </td>
    <td> @slider.Text1 </td>
    <td> @slider.Text2</td>
    <td> @slider.Text3</td>

    @if (slider.Images.Count() > 1)
    {
<td> <a asp-action="DeleteSlider" asp-route-id="@slider.Id" class="btn btn-danger"> Delete </a> </td>
 }
                else
                {
<td> <a asp-action="Index" asp-route-id="@slider.Id" class="btn btn-danger"> Disabled </a> </td>}

    <td> <a asp-action="EditSlider" asp-route-id="@slider.Id" class="btn btn-primary"> Edit </a> </td>

</tr>}
    </tbody>
