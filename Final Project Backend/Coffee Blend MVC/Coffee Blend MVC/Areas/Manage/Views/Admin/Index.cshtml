
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutAdmin.cshtml";
}

 @model List<AppUserVM>



<div class="d-flex justify-content-end mb-2">
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12  text-center">

            <table class="table table-striped table-hover">
                <thead>
                    <tr>

                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Role</th>
                        <th scope="col">Status</th>
                        <th scope="col">Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (AppUserVM appUserVM in Model)
                    {
        <tr>


            <td>@appUserVM.Email</td>
            <td>@appUserVM.UserName</td>
            <td>@appUserVM.Role</td>
            @if (appUserVM.IsDeleted)
            {
<td style="color:red">De Active</td> }
                else
                {
<td style="color:green">Active</td>}
            <td>
                @if (appUserVM.IsDeleted)
                {
<a class="btn btn-success" asp-action="ChangeStatus" asp-route-Id="@appUserVM.Id" asp-route-status="false">Active</a> }
else
{
<a class="btn btn-warning" asp-action="ChangeStatus" asp-route-Id="@appUserVM.Id" asp-route-status="true">Deactive</a>}
                <a class="btn btn-danger" asp-action="ChangeRole" asp-route-Id="@appUserVM.Id">Change Role</a>
                <a class=" btn btn-danger" asp-action="ChangePassword" asp-route-Id="@appUserVM.Id">Change Password</a>

            </td>
        </tr>}
                </tbody>
            </table>
        </div>
    </div>
</div>

