@model Message
@{
    ViewData["Title"] = "ViewMessage";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <div class="forms-sample">
                    <div class="form-group">
                        <span>Number</span>
                        <h1>@Model.Id</h1>
                    </div>
                    <div class="form-group">
                        <span>Sender Email</span>
                        <h3>@Model.Email</h3>
                    </div>
                    <div class="form-group">
                        <span>Subject</span>
                        <h4>@Model.Subject</h4>
                    </div>
                    <div class="form-group">
                        <span>Message</span>
                        <p>@Model.Subject</p>
                    </div>
                    <a asp-action="Index" class="btn btn-warning">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
